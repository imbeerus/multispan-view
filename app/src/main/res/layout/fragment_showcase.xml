<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:ignore="HardcodedText">

    <!--  TODO: add items like youtube and others  -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.lockwood.multispan.roboto.RobotoSingleSpanView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:firstRobotoFont="bold"
            app:firstText="RobotoSpanView" />

        <com.lockwood.multispan.roboto.RobotoTwoSpanView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:firstRobotoFont="black"
            app:firstSeparator=":"
            app:firstText="firstText"
            app:orientation="vertical"
            app:secondRobotoFont="bold"
            app:secondText="secondText" />

        <com.lockwood.multispan.roboto.RobotoThreeSpanView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:firstRobotoFont="black"
            app:firstSeparator=":"
            app:firstText="firstText"
            app:orientation="vertical"
            app:secondRobotoFont="bold"
            app:secondText="secondText"
            app:thirdRobotoFont="light"
            app:thirdText="thirdText" />

        <com.lockwood.multispan.roboto.RobotoFourSpanView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:firstRobotoFont="black"
            app:firstSeparator=":"
            app:firstText="firstText"
            app:fourthRobotoFont="thin"
            app:fourthText="fourthText"
            app:orientation="vertical"
            app:secondRobotoFont="bold"
            app:secondText="secondText"
            app:thirdRobotoFont="light"
            app:thirdText="thirdText" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray" />

        <com.lockwood.multispandemo.view.HighlightTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:firstFont="fonts/roboto_bold.ttf"
            app:firstText="HighlightTextView"
            app:highlightColor="@color/primary"
            app:highlightPattern="[2-9]\\d{2}-\\d{3}-\\d{4}"
            app:orientation="vertical"
            app:secondText="You need to be careful with special characters when you set highlight pattern, eg phone number: 800-555-5555"
            app:useUnderline="true" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray" />

        <com.lockwood.multispan.roboto.RobotoSingleSpanView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:firstRobotoFont="bold"
            app:firstText="SuperscriptTextView" />

        <com.lockwood.multispandemo.view.SuperscriptTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:firstRobotoFont="medium"
            app:firstText="12"
            app:secondRobotoFont="medium"
            app:secondText="00" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>